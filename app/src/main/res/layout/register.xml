<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >
      
       <include layout="@layout/page_head" />   
 

  <ScrollView
    android:id="@+id/sc_index"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none" >
   <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical" >
      <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" >

            <ImageView
                android:id="@+id/img_uname"
                style="@style/gray18Text"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dip"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/uname" />

            <EditText
                android:id="@+id/editname"
                style="@style/edittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dip"
                android:hint="请输入用户名"
                android:inputType="textPersonName"
                android:maxLength="20"
                android:maxLines="1"
                android:width="190dip" />
        </LinearLayout>

         <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp" 
                     android:layout_marginTop="2dp"
                     android:layout_marginLeft="50dp"
                      android:layout_marginRight="20dp"
                     android:layout_marginBottom="10dp"            
                    android:background="#ffffff" />   

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" >

           <ImageView
                android:id="@+id/img_upwd"
                style="@style/gray18Text"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dip"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/upwd" />

            <EditText
                android:id="@+id/editpassw"
                style="@style/edittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dip"
                android:hint="请输入登录密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:maxLines="1"
                android:width="190dip" >
            </EditText>
        </LinearLayout>

         <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp" 
                     android:layout_marginTop="2dp"
                     android:layout_marginLeft="50dp"
                      android:layout_marginRight="20dp"
                     android:layout_marginBottom="10dp"            
                    android:background="#ffffff" />   

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" >

           <ImageView
                android:id="@+id/img_confirm_upwd"
                style="@style/gray18Text"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dip"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/confirm_pwd" />

            <EditText
                android:id="@+id/editpassw2"
                style="@style/edittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dip"
                android:hint="请再次输入登录密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:maxLines="1"
                android:width="190dip" />
        </LinearLayout>

         <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp" 
                     android:layout_marginTop="2dp"
                     android:layout_marginLeft="50dp"
                      android:layout_marginRight="20dp"
                     android:layout_marginBottom="10dp"            
                    android:background="#ffffff" />   

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" >

            <ImageView
                android:id="@+id/img_phone"
                style="@style/gray18Text"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dip"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/phone" />

            <EditText
                android:id="@+id/editem_phone"
                style="@style/edittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dip"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLines="1"
                android:maxLength="11"
                android:width="190dip" />
        </LinearLayout>

         <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp" 
                     android:layout_marginTop="2dp"
                     android:layout_marginLeft="50dp"
                      android:layout_marginRight="20dp"
                     android:layout_marginBottom="10dp"            
                    android:background="#ffffff" />   

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
             android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" >

            <ImageView
                android:id="@+id/img_yzm"
                style="@style/gray18Text"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_margin="10dip"
                android:src="@mipmap/yzm" />

            <EditText
                android:id="@+id/editem_phonenum"
                style="@style/edittext"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/img_yzm"
                android:hint="请输入验证码"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                   />

                <Button
                    android:id="@+id/sendphonenum"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:background="@drawable/small_circleconor_shape_orange"
                    android:layout_alignParentRight="true"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:textSize="14sp" />

        </RelativeLayout>

         <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp" 
                     android:layout_marginTop="2dp"
                     android:layout_marginLeft="50dp"
                      android:layout_marginRight="20dp"
                     android:layout_marginBottom="10dp"            
                    android:background="#ffffff" />   

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" >

           <ImageView
                android:id="@+id/img_recomand"
                style="@style/gray18Text"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dip"                
                android:src="@mipmap/recomand" />

            <EditText
                android:id="@+id/editem_people"
                style="@style/edittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dip"
                android:hint="请输入推荐人（可选）"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:width="190dip" />
        </LinearLayout>
      
        
         <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp" 
                     android:layout_marginTop="2dp"
                     android:layout_marginLeft="50dp"
                      android:layout_marginRight="20dp"
                     android:layout_marginBottom="10dp"            
                    android:background="#ffffff" />   
        
        
        
        
        
        
        
        
        
        
    </LinearLayout>
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/register_flag"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/b_chech_1_1"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/show_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意《注册协议》"
            android:textColor="@color/font_blue" />
    </LinearLayout>

    <TextView
        android:id="@+id/register"
        style="@style/button_orange"
        android:text="注  册" />
    </LinearLayout>
  </ScrollView>
</LinearLayout>